@page
@model PROYECTOBD1.Pages.Recetas.Instrucciones.AñadirModel
@{
}
<br>
<h2>Lista de Instrucciones</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PASO</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="PASO" value="@Model.instruccionInfo.PASO">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DESCRIPCION</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="DESCRIPCION" value="@Model.instruccionInfo.DESCRIPCION">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type='button' class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="col-sm-5 d-grid">
            <button type="submit" class="btn btn-primary">LISTO</button>
        </div>
        <div class="col-sm-5 d-grid">
            <a class='btn btn-primary btn-sm' href='/Recetas/Cliente/InstruccionC'>AÑADIR PASO</a>
        </div>
        <div class="col-sm-5 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">CANCELAR</a>
        </div>
    </div>
</form>