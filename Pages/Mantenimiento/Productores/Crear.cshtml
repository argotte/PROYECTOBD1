@page
@model PROYECTOBD1.Pages.Productores.CrearModel
@{
}
<br />
<h2>NUEVO PRODUCTOR</h2>
@if (Model.error.Length>0){
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.error</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
    </div>
}


<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">NOMBRE</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRE" value="@Model.productorModelo.NOMBRE">
           
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ENVASE ESTANDAR</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ENVASE_ESTANDAR" value="@Model.productorModelo.ENVASE_ESTANDAR">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DIRECCION</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="DIRECCION" value="@Model.productorModelo.DIRECCION">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PAIS DE ORIGEN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBREPAIS" value="@Model.productorModelo.NOMBREPAIS">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CIUDAD DE ORIGEN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRECIUDAD" value="@Model.productorModelo.NOMBRECIUDAD">
        </div>
    </div>

    @if (Model.correcto.Length>0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.correcto</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 colcol-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">ACEPTA</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">CANCELAR</a>
        </div>
       
    </div>
</form>