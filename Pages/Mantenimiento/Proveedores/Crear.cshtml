@page
@model PROYECTOBD1.Pages.Proveedores.CrearModel
@{
}
<br />
<h2>NUEVO PROVEEDOR</h2>
@if (Model.error.Length>0){
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.error</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
    </div>
}


<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">NOMBRE</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRE" value="@Model.proveedorModelo.NOMBRE">
           
        </div>
    </div>
    <div class="row mb-3">
    <select id="Select1" name="TIPONEGOCIO" asp-items="@(new SelectList(Model.listaTipoNegocios,"NOMBRE","NOMBRE"))">
        <option value="" selected disabled>SELECCIONAR TIPO DE NEGOCIO</option>
    </select>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PAIS DE ORIGEN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBREPAIS" value="@Model.proveedorModelo.NOMBREPAIS">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CIUDAD DE ORIGEN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRECIUDAD" value="@Model.proveedorModelo.NOMBRECIUDAD">
        </div>
    </div>

    @if (Model.correcto.Length>0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.correcto</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="col-sm-5 d-grid">
            <button type="submit" class="btn btn-primary">ACEPTA</button>
        </div>
        <div class="col-sm-5 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">CANCELAR</a>
        </div>
       
    </div>
</form>