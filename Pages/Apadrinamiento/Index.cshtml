@page
@model PROYECTOBD1.Pages.Apadrinamiento.IndexModel
@{
}
<br />
<form method="post">
    <h2>LISTA DE PRODUCTORES</h2>
    <h1 class="text-center">
        <h2>SELECCIONA UN PAIS</h2>
        <hr />
        @*                                                                             CUAL TOMA,CUAL MUESTRA*@
        <select id="Select1" name="productor" asp-items="@(new SelectList(Model.listaProductor,"ID","NOMBRE"))">
            <option value="" selected disabled>SELECCIONAR PRODUCTOR</option>
        </select>
        <input type="submit" value="ACEPTAR" />
    </h1>
</form>
<a class='btn btn-primary btn-sm' href='/Apadrinamiento/Crear'>Nuevo Programa Apadrinamiento</a>
<a class='btn btn-primary btn-sm' href='/Apadrinamiento/Padrino/Crear'>Registrar nuevo Padrino</a>
<table id="myTable" class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>DOCUMENTO DE IDENTIDAD</th>
            <th>NOMBRE DE VARIEDAD</th>
            <th>NOMBRE DE PADRINO</th>
            @*     <th>COOPERATIVA</th>*@
            <th>FECHA INICIAL DEL PROGRAMA </th>
            <th>FECHA FINAL DEL PROGRAMA</th>
            <th>APORTE ANUAL ($)</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listaPam)
        {
            <tr>
                <td>@item.CEDULAPADRINO</td>
                <td>@item.NOMBREVARIEDAD</td>
                <td>@item.NOMBREPADRINO</td>
                <td>@item.FECHAINICIO</td>
                @* <td>@item.FK_COOPERATIVA</td>*@
                <td>@item.FECHAFINAL</td>
                <td>@item.APORTEANUAL</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Mantenimiento/Productores/Cultivos/Cultivos?id=@item.FECHAINICIO">ELIMINAR</a>
                </td>
            </tr>
        }
    </tbody>
</table>