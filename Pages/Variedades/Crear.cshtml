@page
@model PROYECTOBD1.Pages.Variedades.CrearModel
@{
}
<br />
<h2>NUEVO PRODUCTOR</h2>
@if (Model.error.Length>0){
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.error</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
    </div>
}


<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PRECOCIDAD</label>
        <select id="Select4" name="PRECOCIDAD">
            <option value="" selected disabled>SELECCIONAR PRECOCIDAD</option>
            <option value="EXTRA-TEMPRANA">EXTRA-TEMPRANA</option>
            <option value="TEMPRANA">TEMPRANA</option>
            <option value="MEDIA">MEDIA</option>
            <option value="TARDIA">TARDIA</option>
            <option value="EXTRA-TEMPRANA">EXTRA-TEMPRANA</option>
        </select>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">NOMBRE</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRE" value="@Model.variedadesModelo.NOMBRE">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">FIRMEZA</label>
        <select name="FIRMEZA">
            <option value="" selected disabled>SELECCIONAR FIRMEZA</option>
            <option value="MEDIA">MEDIA</option>
            <option value="FIRME">FIRME</option>
        </select>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">COLOR</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="COLOR" value="@Model.variedadesModelo.COLOR">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ESPECIE</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ESPECIE" value="@Model.variedadesModelo.ESPECIE">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DESCRIPCION</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="DESCRIPCION" value="@Model.variedadesModelo.DESCRIPCION">
        </div>
    </div>

    @if (Model.correcto.Length>0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.correcto</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="col-sm-5 d-grid">
            <button type="submit" class="btn btn-primary">ACEPTAR</button>
        </div>
        <div class="col-sm-5 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">CANCELAR</a>
        </div>
       
    </div>
</form>