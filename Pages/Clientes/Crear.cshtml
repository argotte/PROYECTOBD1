@page
@model PROYECTOBD1.Pages.Clientes.CrearModel
@{
}
<br />
<h2>NUEVO CLIENTE</h2>
@if (Model.error.Length>0){
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.error</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRE" value="@Model.clienteModelo.NOMBRE">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PAIS DE ORIGEN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="FK_ID_PAIS" value="@Model.clienteModelo.FK_ID_PAIS">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CIUDAD DE ORIGEN</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="FK_ID_CIUDAD" value="@Model.clienteModelo.FK_ID_CIUDAD">
        </div>
    </div>

    @if (Model.correcto.Length>0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.correcto</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 colcol-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">ACEPTA</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">CANCELAR</a>
        </div>
       
    </div>
</form>