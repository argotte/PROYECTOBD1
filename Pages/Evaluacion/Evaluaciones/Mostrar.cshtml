@page
@model PROYECTOBD1.Pages.Evaluacion.Evaluaciones.MostrarModel
@{
}
<br />
<form method="post">
    <h1 class="text-center">
        <h2>SELECCIONA UN CLIENTE</h2>
        <hr />
        @*                                                                             CUAL TOMA,CUAL MUESTRA*@
        <select id="Select2" name="cliente" asp-items="@(new SelectList(Model.listaClientes,"NOMBRE","NOMBRE"))">
            <option value="" selected disabled>SELECCIONAR CLIENTE</option>
        </select>

        <input type="submit" value="ACEPTAR" />
    </h1>
</form>
<a class='btn btn-primary btn-sm' href='/Evaluacion/Evaluaciones/Crear'>Nueva Evaluacion</a>
<table id="myTable" class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>AÑO</th>
            <th>FECHA DE EVALUACION</th>
            <th>DECISION FINAL</th>
            <th>RESULTADO</th>
            <th>PORCENTAJE DEL RESULTADO</th>
            <th>CLIENTE</th>
            <th>PRODUCTOR</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.listaEva)
        {
            <tr>
                <td>@item.ANIO</td>
                <td>@item.FECHAEVALUACION</td>
                <td>@item.DECISIONFINAL</td>
                <td>@item.RESULTADO</td>
                <td>@item.PORCENTAJE_RESULTADO</td>
                <td>@item.NOMBRECLIENTE</td>
                <td>@item.NOMBREPRODUCTOR</td>
            </tr>
        }
    </tbody>
</table>