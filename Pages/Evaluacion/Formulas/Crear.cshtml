@page
@model PROYECTOBD1.Pages.Evaluacion.Formulas.CrearModel
@{
}
<br />
<h2>NUEVA FORMULA</h2>
@if (Model.error.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.error</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
    </div>
}


<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">TIPO</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TIPO" value="@Model.formula.TIPO">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PORCENTAJE DE IMPORTANCIA</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="PORCENTAJEIMPORTANCIA" value="@Model.formula.PORCENTAJEIMPORTANCIA">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">PORCENTAJE DE ACEPTACION</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="PORCENTAJEACEPTACION" value="@Model.formula.PORCENTAJEACEPTACION">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CLIENTE</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRECLIENTE" value="@Model.formula.NOMBRECLIENTE">

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CRITERIO</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NOMBRECRITERIO" value="@Model.formula.NOMBRECRITERIO">

        </div>
    </div>

    @if (Model.correcto.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.correcto</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="col-sm-5 d-grid">
            <button type="submit" class="btn btn-primary">ACEPTA</button>
        </div>
        <div class="col-sm-5 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">CANCELAR</a>
        </div>

    </div>
</form>